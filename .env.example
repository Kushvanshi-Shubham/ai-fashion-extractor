# AI Fashion Extractor Frontend Configuration Template
# Copy this file to .env and update the values as needed

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Backend API URL - Update this to match your backend server
VITE_API_BASE_URL=http://localhost:5000/api

# Application settings
VITE_APP_NAME=AI Fashion Attribute Extractor
VITE_APP_VERSION=2.0.0-vlm

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

# Maximum file size (bytes) - 15MB for high-quality images
VITE_MAX_FILE_SIZE=15728640

# Maximum concurrent extractions
VITE_MAX_CONCURRENT_EXTRACTIONS=5

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable enhanced VLM features
VITE_ENABLE_VLM_STATUS=true
VITE_DEFAULT_ENHANCED_MODE=true
VITE_SHOW_MODEL_INFO=true
VITE_SHOW_CONFIDENCE_SCORES=true

# Discovery mode settings
VITE_ENABLE_DISCOVERY_MODE=true
VITE_DEFAULT_DISCOVERY_MODE=false
VITE_SHOW_DISCOVERIES_IN_TABLE=true

# Analytics and monitoring
VITE_ENABLE_ANALYTICS=true
VITE_TRACK_EXTRACTION_TIME=true
VITE_TRACK_TOKEN_USAGE=true

# Development settings
VITE_ENABLE_LOGGING=true
VITE_DEV_MODE=true
VITE_ENABLE_PERFORMANCE_METRICS=true

# ============================================================================
# PRODUCTION SETTINGS (Uncomment for production)
# ============================================================================

# VITE_API_BASE_URL=https://your-production-backend.com/api
# VITE_ENABLE_LOGGING=false
# VITE_DEV_MODE=false
# VITE_DETAILED_ERRORS=false